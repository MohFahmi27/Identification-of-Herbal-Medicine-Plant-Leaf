<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.detail.DetailFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_start_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/dimen_standard" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_end_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/dimen_standard" />

    <View
        android:id="@+id/view2"
        android:layout_width="0dp"
        android:layout_height="165dp"
        android:layout_marginTop="42dp"
        android:background="@drawable/sh_rounded_two_corner"
        app:layout_constraintStart_toEndOf="@id/guideline_start_detail"
        app:layout_constraintEnd_toStartOf="@id/guideline_end_detail"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img_plant_detail"
        android:layout_width="140dp"
        android:layout_height="190dp"
        android:layout_gravity="center"
        android:elevation="2dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@+id/view2"
        app:layout_constraintStart_toStartOf="@+id/view2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize10Percent"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tv_title_detail"
        style="@style/DefaultTextView"
        android:layout_width="0dp"
        android:textColor="@color/secondaryTextColor"
        android:textSize="17sp"
        android:layout_marginHorizontal="@dimen/dimen_standard"
        app:layout_constraintBottom_toBottomOf="@+id/img_plant_detail"
        app:layout_constraintEnd_toEndOf="@+id/view2"
        app:layout_constraintStart_toEndOf="@+id/img_plant_detail"
        app:layout_constraintTop_toTopOf="@+id/view2"
        app:layout_constraintVertical_bias="0.35"
        tools:text="Citrus Limon (Lemon)"/>

    <TextView
        android:id="@+id/tv_date_detail"
        style="@style/DefaultTextView"
        android:layout_width="0dp"
        android:layout_marginTop="@dimen/dimen_small"
        android:textColor="@color/secondaryTextColor"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="@+id/view2"
        app:layout_constraintStart_toStartOf="@+id/tv_title_detail"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_detail"
        app:layout_constraintVertical_bias="0.0"
        tools:text="01 - 02 - 2021" />

    <TextView
        android:id="@+id/tv_description_title"
        style="@style/DefaultTextView"
        android:text="@string/description"
        android:textColor="@android:color/darker_gray"
        android:textSize="15sp"
        android:layout_marginTop="@dimen/dimen_standard"
        app:layout_constraintStart_toEndOf="@id/guideline_start_detail"
        app:layout_constraintTop_toBottomOf="@+id/view2" />

    <TextView
        android:id="@+id/tv_description_plant_detail"
        style="@style/DefaultTextView"
        android:layout_width="0dp"
        android:textColor="@color/primaryTextColor"
        android:textSize="15sp"
        android:layout_marginTop="@dimen/dimen_small"
        app:layout_constraintStart_toEndOf="@id/guideline_start_detail"
        app:layout_constraintEnd_toStartOf="@id/guideline_end_detail"
        app:layout_constraintTop_toBottomOf="@+id/tv_description_title"
        tools:text="@tools:sample/lorem/random"/>


</androidx.constraintlayout.widget.ConstraintLayout>